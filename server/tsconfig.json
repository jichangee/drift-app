{
	"compileOnSave": false,
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noUnusedLocals": true,
		"sourceMap": true,
		"declaration": false,
		"pretty": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"strictPropertyInitialization": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"include": ["index.ts", "src/**/*.ts", "src/migrations"],
	"exclude": ["node_modules"]
}
